<style type="text/css">
	.tag{
		background: #f04545;
		border-radius: 10px;
	}
</style>
<body background="/3.jpg">
<div class="container">
<div class="tag">
<h3>
  &nbsp;&nbsp;&nbsp;Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
   <% end %>
</h3>
</div>
<div class="jumbotron">
<h1><%= @article.title %></h1>
<p><%= @article.body %></p>
<h3><%= link_to "delete", article_path(@article), method: :delete, data: {confirm: "Do you want to delete '#{@article.title}'?"}
 %> |
<%= link_to "edit", edit_article_path(@article) %></h3>
</div>
<div class="jumbotron">
<h3><u>Comments (<%= @article.comments.size %>)</u></h3>
<p><%= render partial: 'articles/comment', collection: @article.comments %></p>
<h3><u>Post your Comments</u></h3>
<%= render partial: 'comments/form' %>
</div>
<div class="btn btn-default"><%= link_to "Back To Articles List", articles_path %></div>
</div>
</body>